        <button class="filter-btn px-6 py-2 bg-blue-600 text-white rounded-full text-sm font-semibold shadow-md active border border-transparent" data-filter="all">All</button>
        <button class="filter-btn px-6 py-2 bg-white dark:bg-slate-800 text-gray-700 dark:text-gray-300 rounded-full text-sm font-semibold hover:shadow-md transition-all border border-gray-200 dark:border-slate-700" data-filter="robotics">Robotics</button>
        <button class="filter-btn px-6 py-2 bg-white dark:bg-slate-800 text-gray-700 dark:text-gray-300 rounded-full text-sm font-semibold hover:shadow-md transition-all border border-gray-200 dark:border-slate-700" data-filter="rl">Reinforcement Learning</button>
        <button class="filter-btn px-6 py-2 bg-white dark:bg-slate-800 text-gray-700 dark:text-gray-300 rounded-full text-sm font-semibold hover:shadow-md transition-all border border-gray-200 dark:border-slate-700" data-filter="dl">Deep Learning</button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Project 1 -->
        <div class="project-card group bg-white dark:bg-slate-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-slate-700 flex flex-col" data-category="robotics rl">
